# Academic Lab Environment Configuration
# Copy to .env and fill in your values

# Environment
ENVIRONMENT=staging
DEBUG=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/academiclab
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_RECYCLE=3600

# API Configuration
API_URL=https://staging-api.academiclab.com
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS (Cross-Origin Resource Sharing)
CORS_ORIGINS=["https://staging.academiclab.com", "http://localhost:3000"]

# Analytics (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SEGMENT_KEY=your-segment-api-key

# Email (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/academiclab/app.log

# Feature Flags
FEATURE_MCAR_MNAR_DETECTION=true
FEATURE_DECISION_TREE=true
FEATURE_VALIDATION_CHECKLIST=true
